import mysql
from mysql.connector import (connection)
from mysql.connector import errorcode

class SQLConn():
    def __init__(self, part_con):
        self.conn_info = part_con
        self.conn = None

    def checkTableExists(self, table_name):
        self.conn = connection.connect(self.conn_info)
        cursor = self.conn.cursor()
        cursor.execute("""
            SELECT COUNT(*)
            FROM information_schema.tables
            WHERE table_name = '{0}'
            """.format(table_name.replace('\'', '\'\'')))
        if cursor.fetchone()[0] == 1:
            cursor.close()
            return True

        cursor.close()
        return False

